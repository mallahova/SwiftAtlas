{
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.devcontainer.yml"
  ],
  "service": "swiftatlas",
  "containerUser": "root",
  "name": "swiftatlas",
  "workspaceFolder": "/app",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "username": "none"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "formulahendry.docker-explorer",
        "mhutchie.git-graph",
        "GitHub.copilot",
        "ms-vscode.makefile-tools",
        "LittleFoxTeam.vscode-python-test-adapter",
        "m4ns0ur.base64",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode"
      ],
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.interpreter.infoVisibility": "always",
        "python.testing.pytestArgs": [
          "--verbose",
          "-m",
          "not contract_test"
        ],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "python.testing.cwd": "/swiftatlas",
        "python.testing.autoTestDiscoverOnSaveEnabled": true,
        "workbench.colorCustomizations": {
          "activityBar.foreground": "#8833ff",
          "activityBar.activeBorder": "#8833ff",
          "activityBar.inactiveForeground": "#DADADA",
          "activityBarBadge.background": "#8833ff",
          "titleBar.activeForeground": "#8833ff",
          "statusBar.foreground": "#8833ff",
          "statusBar.border": "#8833ff"
        }
      }
    }
  }
}